generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MANY ORDERS AND PRODUCTS, 1-n address
model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  name         String // editable
  sub          String    @unique
  role         Role?     @default(USER) // yes but only by the ADMIN
  address      Address[] // editable
  phone_number String? //editable
  orders       Order[]
}

enum Role {
  ADMIN
  USER
}

// 1-n relation with orders
model Address {
  id       Int     @id @default(autoincrement())
  address1 String
  address2 String?
  country  String
  city     String
  postcode String
  user     User    @relation(fields: [userId], references: [id])
  userId   Int
  orders   Order[]
}

// ONE CUSTOMER PER ORDER, MANY ITEMS PER ORDER
model Order {
  id          Int       @id @default(autoincrement())
  fulfilled   Boolean   @default(false)
  products    Product[]
  total_price Float
  customer    User      @relation(fields: [customerId], references: [id]) //if when we delete a user we want all of its orders to be canceled we need to set: onDelete: Cascade
  customerId  Int
  address     Address   @relation(fields: [addressId], references: [id])
  addressId   Int
  createdAt   DateTime  @default(now())
  shippedAt   DateTime?
}

// IMPLICIT MANY TO MANY RELATION WITH ORDER TABLE, COUT INVENTORY!
model Product {
  id          Int      @id @default(autoincrement())
  pictures    String[]
  price       Float
  description String
  title       String   @unique
  inventory   Int      @default(0)
  orders      Order[]
  colours     Colour[]
}

model Colour {
  id       Int       @id @default(autoincrement())
  colour   String    @unique
  products Product[]
  scents   Scent[]
}

model Scent {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  colour Colour[]
}

